<h1>Ajouter un cocktail </h1>


<%= form_for @post do |f| %>

<div class="form-group">

<label>Nom de cocktail </label>
<%= f.text_field :name,  class: 'form-control' %>
</div>

<div class="form-group">
<label>Description cocktail </label>
<%= f.text_area :content, class: 'form-control' %>
</div>

<div class="form-group">
<%= f.label :image %>
<%= f.file_field :image, class: 'form-control' %>
</div>


<%= f.label "Ingredients" %><br />
  <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name do |b| %>
    <div class="collection-check-box">
      <%= b.check_box %>
      <%= b.label %>
    </div>
  <% end %>


<div class="form-group">
<button type="submit" class="btn btn-success">Creer l'article</button>
</div>


<%end%>