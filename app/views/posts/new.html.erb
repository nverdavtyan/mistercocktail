<h1>Creer l'article </h1>


<%= form_for @post do |f| %>

<div class="form-group">

<label>Titre de l'article </label>
<%= f.text_field :name,  class: 'form-control' %>
</div>

<div class="form-group">
<label>Desarticle </label>
<%= f.text_area :content, class: 'form-control' %>
</div>



<%= f.label "Area of Expertise" %><br />
  <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name do |b| %>
    <div class="collection-check-box">
      <%= b.check_box %>
      <%= b.label %>
    </div>
  <% end %>


<div class="form-group">
<button type="submit" class="btn btn-success">Creer l'article</button>
</div>


<%end%>